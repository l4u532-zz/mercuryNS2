<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Book your training"></ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto, *" columns="auto, *">
        <Button col="0" text="Trainingz" cssClass="link" tap="navToTrainings" />
        <Button col="1" text="Signups" cssClass="link" tap="navToSignups" />
        <ListView items="{{ groceryList }}" id="groceryList" row="2" colSpan="2" itemTap="listViewItemTap">
            <ListView.itemTemplate>
                <StackLayout columns="*, auto">
                    <Label text="{{ type }}" />
                    <Label text="{{ starts }}" />
                    <Label text="{{ partic_current }}" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="2" />
    </GridLayout>
</Page>